<h1 class="appTitle">スケジュール管理アプリ</h1>

<div class="menuBar">
  <h2>予定一覧</h2>
  <%= link_to "+新規", new_schedule_path, class:"btn btn-success" %>
</div>
<table class="table">
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>終日</th>
    <th>更新日時</th>
    <th></th>
    <th></th>
    <th></th>  
  </tr>
  <% sum = 0 %>
  <% @schedules.each do |schedule|%>
  <tr>
    <td><%= schedule.id %></td>
    <td><%= schedule.title %></td>
    <td><%= schedule.startDay.strftime("%Y/%m/%d") %></td>
    <td><%= schedule.finalDay.strftime("%Y/%m/%d") %></td>
    <td>
      <% if schedule.allDay == true %>
      <%= "○" %>
      <% else %>
      <%= "" %>
      <% end %>
    </td>
    <td><%= schedule.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
    <td><%= link_to "詳細",schedule_path(schedule)%></td>
    <td><%= link_to "編集",edit_schedule_path(schedule)%></td>
    <td><%= button_to "削除",schedule_path(schedule), {method: :delete, class:"deleteButton",form: { data: { turbo_confirm: "予定を削除しますか？" } } } %></td>
  </tr>
  <% end %>
</table>


<div class="footer">
  <p>予定合計<%= Schedule.count %>件</p>
  <p>本日の日付<%= Date.current.strftime('%Y/%m/%d') %></p>
</div>